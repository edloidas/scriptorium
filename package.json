{
  "name": "scriptorium",
  "version": "0.1.0",
  "private": true,
  "description": "Visual editor for crafting branching game dialogs",
  "author": "Mikita Taukachou",
  "license": "GPL-3.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm -r build",
    "check": "pnpm typecheck && pnpm lint && pnpm format:check",
    "check:fix": "pnpm typecheck && pnpm lint:fix && pnpm format",
    "typecheck": "pnpm -r typecheck",
    "lint": "biome check . && eslint --cache '**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "biome check --write --unsafe . && eslint --cache '**/*.{ts,tsx}' --fix",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "db:generate": "pnpm --filter @scriptorium/db generate",
    "db:push": "pnpm --filter @scriptorium/db push",
    "db:migrate": "pnpm --filter @scriptorium/db migrate",
    "db:studio": "pnpm --filter @scriptorium/db studio",
    "storybook": "pnpm --filter @scriptorium/ui storybook",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "~2.3.8",
    "@eslint/js": "~9.39.0",
    "@types/node": "~22.15.0",
    "@typescript-eslint/eslint-plugin": "~8.49.0",
    "@typescript-eslint/parser": "~8.49.0",
    "eslint": "~9.39.0",
    "eslint-plugin-jsx-a11y": "~6.10.0",
    "eslint-plugin-react": "~7.37.0",
    "husky": "~9.1.7",
    "lint-staged": "~16.2.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "~8.49.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.25.0",
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write --unsafe --no-errors-on-unmatched",
      "eslint --cache --fix --no-warn-ignored"
    ],
    "*.{json,css}": [
      "biome check --write --unsafe --no-errors-on-unmatched"
    ]
  }
}
